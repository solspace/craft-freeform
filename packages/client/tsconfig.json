{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "../plugin/src/Resources/js/client/",
    "jsx": "react",
    "lib": ["ESNext", "DOM"],
    "resolveJsonModule": true,
    "types": ["jest", "node"],
    "typeRoots": ["config/@types", "node_modules/@types"],
    "paths": {
      "@editor/*": ["client/src/app/pages/forms/edit/*"],
      "@components/*": ["client/src/app/components/*"],
      "@ff-icons/*": ["client/src/assets/icons/*"],
      "@ff-client/*": ["client/src/*"]
    }
  },
  "exclude": ["node_modules"]
}
