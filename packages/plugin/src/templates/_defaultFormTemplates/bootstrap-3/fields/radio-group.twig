{{ field.renderLabel(properties) }}

{% if field.oneLine %}
    <div>
        {% for option in field.options %}
            <label class="radio-inline">
                <input type="radio"
                       name="{{ field.handle }}"
                       value="{{ option.value }}"
                        {{ option.checked ? "checked" : "" }}
                />
                {{ option.label|t('freeform')|raw }}
            </label>
        {% endfor %}
    </div>
{% else %}
    {% for option in field.options %}
        <div class="radio">
            <label>
                <input type="radio"
                       name="{{ field.handle }}"
                       value="{{ option.value }}"
                        {{ option.checked ? "checked" : "" }}
                />
                {{ option.label|t('freeform')|raw }}
            </label>
        </div>
    {% endfor %}
{% endif %}

{{ field.renderInstructions() }}
{{ field.renderErrors() }}
