{% extends "freeform/_layouts/settings" %}

{% block actionButton %}

    {% if currentUser.can("freeform-settingsAccess") and providers|length > 0 %}
        <div class="buttons">
            <a href="{{ url('freeform/settings/'~type~'/new') }}" class="btn submit add icon">
                {{ "New Integration"|t('freeform') }}
            </a>
        </div>
    {% endif %}

{% endblock %}

{% block content %}

    <div id="no-integrations" class="padded{% if integrations|length %} hidden{% endif %}">
        <p>{{ "No integrations exist yet"|t('freeform') }}</p>
    </div>

    {% if integrations|length %}
        <table id="integrations" class="data fullwidth collapsible">
            <thead>
            <tr>
                <th scope="col">{{ "Name"|t('freeform') }}</th>
                <th scope="col">{{ "Handle"|t('freeform') }}</th>
                <th scope="col">{{ "Service Provider"|t('freeform') }}</th>
                <th scope="col">{{ "Last Updated"|t('freeform') }}</th>
                <td class="thin"></td>
            </tr>
            </thead>
            <tbody>
            {% for integration in integrations %}
                <tr data-id="{{ integration.id }}" data-name="{{ integration.name }}">
                    <th scope="row" data-title="{{ 'Name'|t('freeform') }}">
                        {% if craft.freeform.pro %}
                            <a href="{{ url('freeform/settings/'~type~'/'~integration.id) }}">{{ integration.name }}</a>
                        {% else %}
                            {{ integration.name }}
                        {% endif %}
                    </th>
                    <td data-title="{{ "Handle"|t('freeform') }}" class="code">
                        {{ integration.handle }}
                    </td>
                    <td data-title="{{ "Service Provider"|t('freeform') }}" class="code">
                        {{ integration.integrationObject.serviceProvider }}
                    </td>
                    <td data-title="{{ 'Last Updated'|t('freeform') }}">
                        {{ integration.lastUpdate|date("Y-m-d H:i") }}
                    </td>
                    <td class="thin">
                        <a class="delete icon" title="{{ 'Delete'|t('freeform') }}" role="button"></a>
                    </td>
                </tr>
            {% endfor %}

            </tbody>
        </table>
    {% endif %}

    {% if providers|length == 0 %}
        <div class="alert alert-info alert-dismissible">
            <a href="{{ cpUrl("plugin-store/freeform") }}">
                {{ "Upgrade to Pro to enable"|t('freeform') }}
            </a>
        </div>
    {% endif %}

{% endblock %}

{% css %}
    #content { padding: 0; }
{% endcss %}

{% js %}
    var adminTable = new Craft.AdminTable({
    tableSelector: '#integrations',
    noObjectsSelector: '#no-integrations',
    newObjectBtnSelector: '#new-integration',
    deleteAction: 'freeform/{{ type }}/delete',
    confirmDeleteMessage: '{{ "Are you sure you want to remove the “{name}” integration?"|t('freeform') }}'
    });
{% endjs %}
