{
  "name": "root",
  "workspaces": [
    "packages/client",
    "packages/scripts",
    "packages/styles"
  ],
  "private": true,
  "description": "Freeform plugin for Craft CMS",
  "dependencies": {
    "4": "^0.0.0",
    "install": "^0.13.0",
    "npm": "^9.8.1"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.22.11",
    "@typescript-eslint/eslint-plugin": "^6.5.0",
    "@typescript-eslint/parser": "^6.5.0",
    "browserslist": "^4.21.10",
    "eslint": "^8.48.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-config-react": "^1.1.7",
    "eslint-plugin-babel": "^5.3.1",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "hosted-git-info": "7.0.0",
    "ini": ">=2.0.0",
    "postcss": "^8.4.28",
    "prettier": "^3.0.2",
    "prettier-eslint": "^15.0.1",
    "typescript": "^5.2.2"
  },
  "scripts": {
    "dev": "npm run dev --workspaces --if-present",
    "front-end": "npm run dev --workspace=@ff/scripts --workspace=@ff/styles",
    "build": "npm run build --workspaces",
    "format": "prettier --write '**/*.{ts,tsx,md,json,js,jsx,css}'",
    "format:verify": "prettier --list-different '**/*.{ts,tsx,md,json,js,jsx,css}'",
    "lint": "npm run lint --workspaces",
    "test": "npm run test --workspaces"
  },
  "author": "Solspace, Inc.",
  "license": "ISC"
}
